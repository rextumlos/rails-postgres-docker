<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1 class="text-3xl font-light">Posts</h1>

<div id="posts" class="">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
